pipeline {
  agent any

  
  stages {
    stage('Version') {
      steps {
        sh 'python3 --version'
      }

    }
 
    stage('Install dependency') {
      steps {
        sh 'python3 -m pip install -r requirements.txt --break-system-packages'
      }
    }
    stage('Running Test') {
      steps {
        sh 'python3  -m pytest -v --tb=line tests/ --disable-warnings --html=report.html --title="Report QAE Test BE "  --self-contained-html'


      }
      post {
    always {
 slackSend( channel: "demopytest", token: "6yU1qlFHQfWJCJsZw0XfCkyO", color: "good", message:"Automação executada com sucesso  ${env.JOB_NAME}  build ${currentBuild.number} Relatório  http://localhost:8080/job/demopytest/${currentBuild.number}/execution/node/3/ws/report.html"")
        publishHTML (target: [

              allowMissing: false,
              alwaysLinkToLastBuild: false,
              keepAll: true,
              reportDir: '',
              reportFiles: "pytest_html_report.html",
              reportName: "Report"])
    }
  }      
 }  



      }
  }

