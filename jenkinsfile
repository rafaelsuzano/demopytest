pipeline {
  agent any

  
  stages {
    stage('Version') {
      steps {
        sh 'python --version'
      }

    }
 
    stage('Install dependency') {
      steps {
        sh 'python -m pip install -r requirements.txt --break-system-packages'
      }
    }
    stage('Running Test') {
      steps {
        sh 'python  -m pytest -v --tb=line tests/ --disable-warnings --html=report.html --title="Report QAE Test BE "  --self-contained-html'


      }
      post {
    always {
 slackSend( channel: "teste_automacao", token: "U8JQFVw4iTTt2qoFxnnGALP8", color: "good", message:"Automação executada com sucesso  ${env.JOB_NAME}  build ${currentBuild.number} Relatório  http://localhost:8080/job/demopytest/${currentBuild.number}/execution/node/3/ws/report.html")
        publishHTML (target: [

              allowMissing: false,
              alwaysLinkToLastBuild: false,
              keepAll: true,
              reportDir: '',
              reportFiles: "pytest_html_report.html",
              reportName: "Report"])
    }
  }      
 }  



      }
  }

